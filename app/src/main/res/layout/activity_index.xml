<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cetcme.rcldandroid.IndexActivity"
    android:background="#efeff4">

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="本船信息"
        android:id="@+id/myShipButton"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/myshipbutton"
        android:contextClickable="false"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="17dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="港口信息"
        android:id="@+id/fenceButton"
        android:background="@drawable/fencebutton"
        android:contextClickable="false"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_marginRight="45dp"
        android:layout_alignTop="@+id/myShipButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="轨迹记录"
        android:id="@+id/routeButton"
        android:layout_marginTop="61dp"
        android:background="@drawable/routebutton"
        android:contextClickable="false"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_below="@+id/myShipButton"
        android:layout_alignLeft="@+id/myShipButton"
        android:layout_alignStart="@+id/myShipButton" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="帮        助"
        android:id="@+id/helpButton"
        android:background="@drawable/helpbutton"
        android:contextClickable="false"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_alignTop="@+id/routeButton"
        android:layout_alignLeft="@+id/fenceButton"
        android:layout_alignStart="@+id/fenceButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/welcomeTextView"
        android:layout_above="@+id/fenceButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />
</RelativeLayout>
