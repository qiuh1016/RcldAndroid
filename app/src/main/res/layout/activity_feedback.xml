<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cetcme.rcldandroidZhejiang.FeedbackActivity"
    android:background="#efeff4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="请输入遇到的问题或建议"
        android:id="@+id/textView34"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/questionEditTextInFeedback"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView34"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:drawable/editbox_background_normal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneEditTextInFeedback"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/textView35"
        android:layout_alignLeft="@+id/textView35"
        android:layout_alignStart="@+id/textView35"
        android:layout_alignRight="@+id/questionEditTextInFeedback"
        android:layout_alignEnd="@+id/questionEditTextInFeedback"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="联系电话（选填）"
        android:id="@+id/textView35"
        android:textSize="16sp"
        android:layout_below="@+id/questionEditTextInFeedback"
        android:layout_alignLeft="@+id/questionEditTextInFeedback"
        android:layout_alignStart="@+id/questionEditTextInFeedback"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="提交"
        android:id="@+id/submitButtonInFeedback"
        android:textColor="#ffffff"
        android:background="#3562bd"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/phoneEditTextInFeedback"
        android:layout_alignLeft="@+id/phoneEditTextInFeedback"
        android:layout_alignStart="@+id/phoneEditTextInFeedback"
        android:layout_alignRight="@+id/phoneEditTextInFeedback"
        android:layout_alignEnd="@+id/phoneEditTextInFeedback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0/400"
        android:id="@+id/stringLengthTextViewInFeedback"
        android:layout_below="@+id/questionEditTextInFeedback"
        android:layout_alignRight="@+id/questionEditTextInFeedback"
        android:layout_alignEnd="@+id/questionEditTextInFeedback"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp" />

</RelativeLayout>
